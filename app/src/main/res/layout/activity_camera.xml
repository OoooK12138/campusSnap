<?xml version="1.0" encoding="utf-8"?>

<!--随手拍界面-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/turn_back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        <TextView android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/up_load"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:text="上传"
            android:textColor="@color/white"
            android:background="@drawable/btn_upload"
            />


    </LinearLayout>



    <EditText
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入标题"
        />

    <EditText
        android:id="@+id/problem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入问题描述"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:id="@+id/photo_item"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:background="@drawable/ic_add"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem_description"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/safe_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全隐患"
            />

        <RadioButton
            android:id="@+id/sanitation_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="卫生问题" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秩序问题"
            android:layout_marginLeft="70dp"
            android:id="@+id/rule_radiobutton"
            />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/importance_group"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/importance_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重要"
            android:layout_marginLeft="60dp"
            />
        <RadioButton
            android:id="@+id/common_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一般"
            android:layout_marginLeft="170dp"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/locationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:text="定位当前位置"/>


</LinearLayout>
