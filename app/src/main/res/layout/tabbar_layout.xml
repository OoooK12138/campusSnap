<?xml version="1.0" encoding="utf-8"?>

<!--底部菜单栏-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/gray">

    <!-- 新闻标签 -->
    <LinearLayout
        android:id="@+id/news_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/news_tab_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/tab_news"/>
        <TextView
            android:id="@+id/news_tab_text"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新闻"/>
    </LinearLayout>

    <!-- 主页标签 -->
    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/home_tab_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/tab_home"/>
        <TextView
            android:id="@+id/home_tab_text"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="主页"/>
    </LinearLayout>

    <!-- 随手拍标签 -->
    <LinearLayout
        android:id="@+id/camera_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/camera_tab_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/tab_camera"/>
        <TextView
            android:id="@+id/camera_tab_text"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="随手拍"/>
    </LinearLayout>

    <!-- 用户标签 -->
    <LinearLayout
        android:id="@+id/user_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user_tab_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/tab_user"/>
        <TextView
            android:id="@+id/user_tab_text"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我的"/>
    </LinearLayout>

</LinearLayout>